  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Operates a Corda Open Source node that connects to \"Testnet\"",
  "Parameters": {
    "InstanceType": {
      "Description": "Corda Server instance type",
      "Type": "String",
      "Default": "t2.medium",
      "AllowedValues": [
        "t2.medium",
        "t2.large",
        "m1.medium",
