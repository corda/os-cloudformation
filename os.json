    "EC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "IPAddress=",
                {
                  "Ref": "IPAddress"
                },
                "P2PPort=",
                {
                  "Ref": "P2PPort"
                }
              ]
            ]
          }
        },
        "InstanceType": {
