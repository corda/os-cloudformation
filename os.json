                },
                "Arch"
              ]
            }
          ]
        }
      },
      "Metadata": {
        "AWS::CloudFormation::Init": {
          "configSets": {
            "InstallAndRun": [
              "Install",
              "Configure"
            ]
          },
          "Install": {
            "files": {
              "/usr/local/bin/corda-install.sh": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "#!/bin/bash -e\n",
                      "\n",
                      "# Script to download and install Corda Open Source Binaries from Testnet\n",
                      "# Example:\n",
                      "#   ./install.sh 93.184.216.3 10001 6d21186f-3f67-41ce-887e-eff6415126c0 GB \"Milton Keynes\"\n",
                      "\n",
                      "set -euo pipefail\n",
                      "\n",
                      "# Parameters\n",
                      "PUBLIC_IP=\"$1\"\n",
                      "P2P_PORT=\"$2\"\n",
                      "TESTNET_KEY=\"$3\"\n",
                      "COUNTRY=\"$4\"\n",
                      "LOCALITY=\"$5\"\n",
                      "\n",
                      "# Constants\n",
                      "INSTALL_DIR=\"/opt/corda\"\n",
                      "NODE_CONFIG_FILE=\"/opt/corda/node.conf\"\n",
                      "TESTNET_URL=\"https://testnet.corda.network\"\n",
                      "CORDA_CONFIG=\"DEFAULT\"\n",
                      "CORDA_DISTRIBUTION=\"OPENSOURCE\"\n",
                      "\n",
                      "# Exits the process with a status indicating error\n",
                      "error() {\n",
                      "    echo \"$(date +'%Y-%m-%d %H:%M:%S') [ERROR] $@\" >> /dev/stderr\n",
                      "    exit 1\n",
                      "}\n",
                      "\n",
                      "# Install Java 8\n",
                      "test $(rpm -qa java-1.8.0\\* | wc -l) -gt 0 || sudo yum -y install java-1.8.0\n",
                      "test $(rpm -qa java-1.7.0-openjdk\\* | wc -l) -eq 0 || sudo yum -y remove java-1.7.0-openjdk\n",
                      "\n",
                      "# Create User\n",
                      "getent group corda &> /dev/null || sudo groupadd corda\n",
                      "getent passwd corda &> /dev/null || sudo adduser --gid corda --system --no-create-home corda\n",
                      "\n",
                      "# Create Directories\n",
                      "sudo mkdir -p ${INSTALL_DIR}\n",
                      "sudo chown corda:corda ${INSTALL_DIR}\n",
                      "sudo -H -u corda mkdir -p \"$INSTALL_DIR/cordapps\"\n",
                      "sudo -H -u corda mkdir -p \"$INSTALL_DIR/certificates\"\n",
                      "sudo -H -u corda mkdir -p \"$INSTALL_DIR/drivers\"\n",
                      "cd ${INSTALL_DIR}\n",
                      "\n",
                      "# Obtain Binaries\n",
                      "test -f \"$INSTALL_DIR/corda.zip\" || sudo -H -u corda curl -vLs \\\n",
                      "    -d \"{\\\"x500Name\\\":{\\\"locality\\\":\\\"$LOCALITY\\\",\\\"country\\\":\\\"$COUNTRY\\\"},\\\"configType\\\":\\\"$CORDA_CONFIG\\\",\\\"distribution\\\":\\\"$CORDA_DISTRIBUTION\\\"}\" \\\n",
                      "    -H \"Content-Type: application/json\" \\\n",
                      "    -A \"curl/AWS CloudFormation\" \\\n",
                      "    -X POST \"$TESTNET_URL/api/user/node/generate/one-time-key/redeem/$TESTNET_KEY\" \\\n",
                      "    -o \"$INSTALL_DIR/corda.zip\" || error \"Unable to download config template and truststore\"\n",
                      "\n",
                      "# Inflate Binaries\n",
                      "test -f \"${INSTALL_DIR}/corda.jar\" || sudo -H -u corda unzip \"${INSTALL_DIR}/corda.zip\" # 2> /dev/null || (cat \"$INSTALL_DIR/corda.zip\"; rm -f \"$INSTALL_DIR/corda.zip\"; error \"Unable to unzip generated node bundle; was the correct one time download key used?\")\n",
                      "\n",
                      "# Patch Configuration File by replacing the line containing the default P2P address\n",
                      "sudo sed -i \"s/.*p2pAddress.*/\\    \\\"p2pAddress\\\" : \\\"$PUBLIC_IP:$P2P_PORT\\\",/\" ${NODE_CONFIG_FILE}\n",
                      "\n",
                      "# Install upstart Service\n",
                      "sudo tee /etc/init/corda.conf > /dev/null << 'EOF'\n",
                      "description \"Corda\"\n",
                      "\n",
                      "start on runlevel [2345]\n",
                      "stop on runlevel [!2345]\n",
                      "\n",
                      "respawn\n",
                      "chdir /opt/corda\n",
                      "# FIXME `setuid corda` will fail since the version of upstart deployed to Amazon Linux is too old.\n",
                      "# setuid corda\n",
                      "exec su -s /bin/sh -c 'exec \"$0\" \"$@\"' corda -- java -Xmx2048m -jar /opt/corda/corda.jar\n",
                      "EOF\n",
                      "sudo chmod 644 /etc/init/corda.conf\n",
                      "\n",
                      "# Start the Service\n",
                      "if [ $(sudo initctl list | grep corda | grep running | wc -l) -eq 0 ]\n",
                      "then\n",
                      "    sudo initctl start corda\n",
                      "else\n",
                      "    sudo initctl restart corda\n",
                      "fi\n"
                    ]
                  ]
                },
                "mode": "000755",
                "owner": "root",
                "group": "root"
              },
              "/etc/cfn/cfn-hup.conf": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "[main]\n",
                      "stack=",
                      {
                        "Ref": "AWS::StackId"
                      },
                      "\n",
                      "region=",
                      {
                        "Ref": "AWS::Region"
                      },
                      "\n"
                    ]
                  ]
                },
                "mode": "000400",
                "owner": "root",
                "group": "root"
              },
              "/etc/cfn/hooks.d/cfn-auto-reloader.conf": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "[cfn-auto-reloader-hook]\n",
                      "triggers=post.update\n",
                      "path=Resources.EC2Instance.Metadata.AWS::CloudFormation::Init\n",
                      "action=/opt/aws/bin/cfn-init -v ",
                      "         --stack ",
                      {
                        "Ref": "AWS::StackName"
                      },
                      "         --resource EC2Instance ",
                      "         --configsets InstallAndRun ",
                      "         --region ",
                      {
                        "Ref": "AWS::Region"
                      },
                      "\n",
                      "runas=root\n"
                    ]
                  ]
                },
                "mode": "000400",
                "owner": "root",
                "group": "root"
              }
            },
            "services": {
              "sysvinit": {
                "cfn-hup": {
                  "enabled": "true",
                  "ensureRunning": "true",
                  "files": [
                    "/etc/cfn/cfn-hup.conf",
                    "/etc/cfn/hooks.d/cfn-auto-reloader.conf"
                  ]
                }
              }
            }
          },
          "Configure": {
            "commands": {
              "01_install_corda": {
                "command": {
                  "Fn::Join": [
                    "",
                    [
                      "/usr/local/bin/corda-install.sh '",
                      {
                        "Ref": "IPAddress"
                      },
